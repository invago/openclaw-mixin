{
  "id": "mixin-messenger",
  "name": "Mixin Messenger",
  "description": "将Openclaw AI助手接入Mixin Messenger平台",
  "version": "1.0.0",
  "kind": "channel",
  "main": "./index.js",
  "configSchema": {
    "type": "object",
    "properties": {
      "MIXIN_APP_ID": {
        "type": "string",
        "description": "Mixin应用的App ID",
        "required": true
      },
      "MIXIN_SESSION_ID": {
        "type": "string",
        "description": "Mixin应用的Session ID",
        "required": true
      },
      "MIXIN_SESSION_PRIVATE_KEY": {
        "type": "string",
        "description": "会话私钥（Base64编码）",
        "required": true
      }
    },
    "additionalProperties": false
  }
}